@page "/counter"
@* @rendermode InteractiveServer *@

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>
@if(currentCount > 0)
{
    <p>You've clicked the button @(currentCount/Increment) times.</p>
}
else
{
    <p>Click the button to start counting!</p>
}
<input @bind="Increment" type="number" min="1" class="form-control mb-2" placeholder="Increment value" />

<button class="btn btn-primary" @oncontextmenu="HandleContextMenu" @onclick="IncrementCount">Click me
    (+@Increment)</button>

@code {
    [Parameter]
    public int Increment { get; set; } = 1;
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount += Increment;
    }

    private void HandleContextMenu(MouseEventArgs e)
    {
        currentCount = 0; // Reset count on right-click
    }
}
